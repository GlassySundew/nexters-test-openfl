{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "lime",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "build",
      "targetConfiguration": "HTML5 / Debug",
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ],
      "dependsOn" : "kill lime",
      "label": "lime html5 debug"
    },
    {
      "type" : "shell",
      "label" : "kill lime",
      "command" : "killall -9 lime",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "run lime",
      "command": "lime run html5"
    }
  ]
}
